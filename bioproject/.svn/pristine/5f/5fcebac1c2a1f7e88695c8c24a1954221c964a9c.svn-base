	<script type="text/javascript">
$(function(){
        var stickyRibbonTop = $('.blockable').offset().top;
          
        $(window).scroll(function(){
                if( $(window).scrollTop() > stickyRibbonTop ) {
                	  $(".blockable").fadeIn(3000,function(){
                        $('.blockable').css({position: 'fixed', top: '0px'});
                        $('.blockable').css({width: '100%'});
                      
                            // Animation complete
                          });
                        
                } else {
                        $('.blockable').css({position: 'static', top: '0px'});
                       
                }
        });
});

</script>
